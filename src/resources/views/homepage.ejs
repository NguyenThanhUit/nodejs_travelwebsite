<style>
    body {
    font-family: 'Open Sans', Helvetica;
}

/* Banner Section */
.banner {
    background-image: url('/src/img/VivaViet.png');
    background-size: cover;
    color: white;
    padding: 260px 0;
    text-align: center;
}
.banner h2 {
    font-size: 3rem;
}

/* Navbar Section */
.navbar button {
    font-size: 1rem;
}

/* Tour Cho Bạn */
.tour-title {
    font-size: 1.8em;
    color: #044c64;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center; 
    gap: 0.5rem;
    margin-bottom: 20px;
}

.card {
    border: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
}
.card:hover {
    transform: scale(1.02);
}

.text-strike {
    text-decoration: line-through;
    color: red; 
}


/* Khám Phá Các Điểm Đến Section */
.destination-section {
    padding: 40px 0;
    text-align: center;
}
.destination-title {
    font-size: 1.8em;
    color: #044c64;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center; 
    gap: 0.5rem;
    margin-bottom: 20px;
}
.card {
    border: none;
    transition: transform 0.3s ease;
}
.card:hover {
    transform: scale(1.05);
}
.card-title {
    position: absolute;
    bottom: 15px;
    left: 15px;
    font-weight: bold;
    color: white;
    font-size: 1.1rem;
}
.card-btn {
    position: absolute;
    bottom: 15px;
    right: 15px;
    font-size: 0.9rem;
    color: white;
    border: 1px solid white;
    padding: 5px 10px;
    text-decoration: none;
    transition: background-color 0.3s;
}
.card-btn:hover {
    background-color: white;
    color: #333;
}

.taskbar {
    margin-top: -30px; 
    padding: 10px 20px;
    border-radius: 5px;
}

.taskbar div {
    font-weight: 500;
}

.taskbar a {
    font-weight: 600;
    text-decoration: none;
}

.taskbar .btn-success {
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}
/* Custom Dropdown Styling */
.dropdown-menu {
    max-height: 300px;
    overflow-y: auto;
    width: 300px;
}

.dropdown-header {
    font-weight: bold;
    background-color: #f0f0f0;
    padding: 5px 15px;
    color: #044c64;
}

.dropdown-item {
    padding-left: 20px;
}

/* Hide dropdown arrow on the text */
#destinationDropdown::after {
    display: none;
} 

#seasonDropdown::after {
    display: none;
}  

#tourDropdown::after {
    display: none;
}

/* Two-column layout for dropdown menus */
.two-column {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px 20px;
}

.two-column .dropdown-header {
    grid-column: span 2;
    font-weight: bold;
    color: #044c64;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 5px;
}

.two-column .dropdown-item {
    padding-left: 10px;
    font-weight: 500;
    color: #c3a873;
}

.two-column .dropdown-item:hover {
    background-color: #f8f9fa;
    color: #044c64;
}

/* Background pattern */
.testimonial-section {
            background-size: cover;
            padding: 50px 0;
            text-align: center;
        }

        /* Section title */
        .testimonial-section h3 {
            font-size: 1.8em;
            color: #044c64;
            font-weight: bold;
            display: inline-flex;
            align-items: center;
        }

        /* Styling for the quote icon */
        .testimonial-section h3 i {
            font-size: 1.2em;
            margin-right: 10px;
        }

        /* Testimonial card styling */
        .testimonial-card {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            position: relative;
        }

        /* Quote icon in each card */
        .testimonial-card .quote-icon {
            font-size: 2em;
            color: #044c64;
            position: absolute;
            top: -10px;
            left: 20px;
        }

        /* Text and customer info styling */
        .testimonial-card p {
            font-style: italic;
            color: #555;
            margin-bottom: 15px;
        }

        .testimonial-card .customer-info {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 15px;
        }

        /* Customer image */
        .testimonial-card .customer-info img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }

        /* Customer name */
        .customer-name {
            font-weight: bold;
            color: #333;
        }

